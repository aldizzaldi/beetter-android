<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beetter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_beetter2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_beetter2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.splashscreen.SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.login.LoginActivity"/>
        <activity android:name=".NavigationActivity"
            android:theme="@style/hehe"/>
        <activity android:name=".ui.listteam.ListTeamActivity"
            android:theme="@style/hehe"/>
        <activity android:name=".ui.team.TeamFragment"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>